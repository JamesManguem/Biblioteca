

<table class="table">
  <thead class="table-dark">
  <tr>
    <th>Titulo</th>
    <th>Idioma</th>
    <th>N°Páginas</th>
    <th>Descripción</th>
    <th>Autor</th>
    <th>Categoría</th>
    <th>Editorial</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.language %></td>
      <td><%= book.pages %></td>
      <td><%= book.description %></td>
      <% unless book.author.nil? %>
        <td><%= book.author.name %></td>
      <% end %>
      <% unless book.category.nil? %>
        <td><%= book.category.category %></td>
      <% end %>
      <% unless book.editorial.nil? %>
        <td><%= book.editorial.name %></td>
      <% end %>
      <td><%=link_to "Mostrar", action: 'show', id:book.id %></td>
    </tr>
  <% end %>
  </tbody>
</table>