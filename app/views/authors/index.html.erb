

<table class="table">
  <thead class="table-dark">
  <tr>
    <th>Autor</th>
    <th>Nacionalidad</th>
    <th>Idioma</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  <% @authors.each do |author| %> <tr>
    <td><%= author.name %></td>
    <td><%= author.nationality %></td>
    <td><%= author.language %></td>
    <td><%=link_to "Mostrar", action: 'show', id:author.id %></td>
  </tr>
  <% end %>
  </tbody>
</table>